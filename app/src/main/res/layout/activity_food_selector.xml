<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wellpaired.wellpaired.FoodActivity">

    <TextView
        android:id="@+id/choose_your_meat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose Your Meat"
        android:padding="16dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/chicken_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Chicken"
        android:paddingBottom="8dp"
        android:layout_below="@id/choose_your_meat_tv"
        android:textSize="18dp" />

    <Button
        android:id="@+id/beef_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chicken_tv"
        android:layout_centerHorizontal="true"
        android:text="Beef"
        android:paddingBottom="8dp"
        android:textSize="18dp" />

    <Button
        android:id="@+id/fish_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pork_tv"
        android:layout_centerHorizontal="true"
        android:text="Fish"
        android:textSize="18dp" />

    <Button
        android:id="@+id/pork_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/beef_tv"
        android:layout_centerHorizontal="true"
        android:text="Pork"
        android:textSize="18dp" />

</RelativeLayout>
